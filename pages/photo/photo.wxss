/* pages/photo/photo.wxss */
.title .h3{
  text-align: center;
  color:#797f6c;
  text-shadow:10px 12px 10px #b5cd82;
}
.title{
  color:#8e9877;
  font-weight: 600;
}
.title .p1{
  margin:40rpx 0;
}
.title .p2{
  font-size: 16px;
  margin-bottom: 50rpx; 
}
.photo{
  display: flex;
  flex-direction: column;
  text-align: center;  
}
.photo image{
  height: 260px;
}
.photo .swiper{
  width: 700rpx;
  height: 580rpx;
}
.photo .button{
  width:200rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 16px;
  color:#306089;
}
.content{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}
.content text:first-child{
  font-size: 20px;
  color: #89a059;
  font-weight: 600;
  align-self: center;
}
.content text{
  align-self: flex-start;
  margin-top: 80rpx;
  padding: 0 30rpx;
}
.content .img{
  width:750rpx;
  margin-top:100rpx;
}
.content text:last-child{
  margin-top: 10rpx;
}