/* pages/dancing/dancing.wxss */
.title .h3{
  color:#9b82ba;
  text-shadow:10px 12px 10px #ad97c8;
}
.title{
  color:#8cabc8;
  font-weight: 600;
}
.title .p1{
  margin:40rpx 0;
}
.title .p2{
  font-size: 16px;
  margin-bottom: 50rpx; 
}
.dancing{
  display: flex;
  flex-direction: column;
  align-items: center; 
}
.dancing image:first-child{
  width: 750rpx;
  height:600rpx;
  margin-bottom: 20rpx;
}
.dancing text{
  padding:0 30rpx;
  margin-bottom: 30rpx;
}
.dancing image:last-child{
  width: 95%;
  height: 550rpx;
}
.dancing text:last-child{
   margin-top: 80rpx; 
}
.content{
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
}
.content image{
  height: 300px;
  width: 680rpx;
}
.content .swiper{
  width: 750rpx;
  height: 580rpx;
}
.content .button{
  width:200rpx;
  height:60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 16px;
  color:#306089;
}